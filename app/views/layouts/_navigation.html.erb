<div class="header">
  <div class="hero"> 
    <%= link_to 'Stock Exchange', root_path %>
  </div>
  
  <div class="nav">

    <ul >
      <li><%= link_to 'Home', root_path, class: "#{active_class?(root_path)}" %> </li>
      <% if current_user && current_user.admin %>
        <li><%= link_to 'Create User', create_user_path, class: "#{active_class?(create_user_path)}" %></li>
        <li>Search User</li>
        
      <% end %>

      <% if current_user && !current_user.admin %>
        <li><%= link_to 'My Portfolio', my_portfolio_path, class: "#{active_class?(my_portfolio_path)}" %> </li>
        
        <li><%= link_to 'Transaction', transaction_path, class: "#{active_class?(transaction_path)}" %> </li>
      <% end %>

      <% unless current_user && current_user.admin %>
        <li><%= link_to 'About', about_path, class: "#{active_class?(about_path)}" %> </li>
        
      <% end %>
 
    </ul>   
    


  </div>

  <div class="profile">
    <% unless signed_in? %>
      <% unless active_class?(new_user_session_path) || active_class?(new_user_registration_path)  %>
        <%= link_to new_user_session_path do %>
          <button>Login</button>
        <% end %> 
      <% end %>
    <% else %>
      <div class="buy">
        <button class="btn-buy"><%= full_name(current_user.first_name, current_user.last_name) %></button>
        <button class="btn-buy-list" id="dropBtn1" aria-expanded="false"><span class="btn-arrow"></span></button>
        <ul class="dropdown-menu">
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </li>
          <li><%= link_to 'Edit Profile', edit_user_registration_path%></li>
        </ul>

        
      </div>
    <% end %>   
  </div>

</div>
 