<div class="home">
  <div class="section-left">
    <h1 class="section-message">Investment today is a </h1>
    <h1 class="section-message-2">source of income tomorrow.</h1>
    <p class="sub-message">The general public can trade shares on the secondary market after a company's initial public offering.</p>

  </div>
  
  <div class="section-right">
    <div class="signup">
      <h2 class="section-header">Sign up</h2> 
      <div class="form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <% f.label :first_name %><br />
            <%= f.text_field :first_name, placeholder: "First Name", autofocus: true, autocomplete: "First Name" %>
          </div>
          
          <div class="field">
            <% f.label :last_name %><br />
            <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true, autocomplete: "First Name" %>
          </div>

          <div class="field">
            <% f.label :email %><br />
            <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <% f.label :password %>
            <% if @minimum_password_length %>

            <% end %><br />
            <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
          </div>

          <div class="field">
            <% f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "new-password" %>
          </div>

          <div class="field actions">
            <%= f.submit "Sign up", class: "btn" %>
          </div>
        <% end %>
        <div class="direct_to">
          <p>Don't have an account? <span><%= render "devise/shared/links" %> </span></p>
        </div>
        
      </div>
    </div>
  </div>
</div>










